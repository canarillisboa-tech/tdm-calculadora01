<div class="app">
  <div class="logo">TDM</div>
  <div class="subtitle">TROPA DO MANTÉM</div>

  <div class="input-group">
    <label>Valor</label>
    <input type="number" id="valor" placeholder="Digite o valor" oninput="calcular()">
  </div>

  <div class="input-group">
    <label>Porcentagem (%)</label>
    <input type="number" id="percentual" placeholder="Digite a porcentagem" oninput="calcular()">
  </div>

  <div class="result" id="resultado">
    Digite os valores para calcular
  </div>

  <footer>
    © 2026 TROPA DO MANTÉM
  </footer>
</div>

<script>
function calcular() {
  let valor = parseFloat(document.getElementById("valor").value);
  let percentual = parseFloat(document.getElementById("percentual").value);

  if (!valor || !percentual) {
    document.getElementById("resultado").innerHTML = "Digite os valores para calcular";
    return;
  }

  let desconto = valor * (percentual / 100);
  let valorFinal = valor - desconto;

  document.getElementById("resultado").innerHTML =
    "Valor Original: R$ " + valor.toFixed(2) + "<br>" +
    "Desconto: R$ " + desconto.toFixed(2) + "<br>" +
    "<div class='highlight'>Valor Final: R$ " + valorFinal.toFixed(2) + "</div>";
}
</script>

